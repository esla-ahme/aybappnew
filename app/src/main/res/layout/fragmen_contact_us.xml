<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/contactusfragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تواصل معنا "
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_margin="16dp"
            android:layout_marginBottom="0dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تقدر تتابعنا او تتواصل معانا من خلال"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_margin="16dp"
            android:layout_marginBottom="0dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="24dp"
                android:src="@drawable/twitter"
                />
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="24dp"
                android:src="@drawable/facebook"
                />
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="24dp"
                android:src="@drawable/instagram"
                />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="أو من ابعتلنا استفسارك"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_margin="16dp"
            android:layout_marginBottom="0dp"
            />
        <EditText
            android:id="@+id/contactMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="128dp"
            android:hint="استفسارك"
            android:textSize="16sp"
            android:layout_margin="16dp"
            android:layout_marginBottom="0dp"
            />
        <EditText
            android:id="@+id/contactMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="البريد الالكتروني"
            android:textSize="16sp"
            android:layout_margin="16dp"
            android:layout_marginBottom="0dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ارسال"
            android:textSize="16sp"
            android:layout_margin="16dp"
            android:layout_marginBottom="0dp"
            android:id="@+id/contactUsSend"
            />

    </LinearLayout>        </FrameLayout>
    </ScrollView>